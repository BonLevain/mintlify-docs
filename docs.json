{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "willow",
  "name": "Limestone Networks",
  "appearance": {
    "default": "light"
  },
  "colors": {
    "primary": "#004dd1",
    "light": "#1a5fd9",
    "dark": "#003da8"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "groups": [
      {
        "group": "Overview",
        "pages": [
          "index",
          "quickstart",
          "authentication"
        ]
      },
      {
        "group": "Instances",
        "openapi": "api-reference/openapi.json",
        "pages": [
          "GET /instance",
          "POST /instance",
          "GET /job/{job_id}"
        ]
      },
      {
        "group": "Infrastructure",
        "openapi": "api-reference/openapi.json",
        "pages": [
          "GET /core",
          "GET /facility",
          "GET /facility/{location}/stock",
          "GET /image"
        ]
      },
      {
        "group": "Account",
        "openapi": "api-reference/openapi.json",
        "pages": [
          "GET /project",
          "GET /project/{project_id}",
          "GET /sshkey",
          "POST /sshkey",
          "GET /current_user"
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Blog",
          "href": "https://www.limestonenetworks.com/about/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "openapi": "api-reference/openapi.json",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://www.limestonenetworks.com/support"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://one.limestonenetworks.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/LimestoneInc",
      "linkedin": "https://www.linkedin.com/company/limestone-networks-inc/",
      "youtube": "https://www.youtube.com/user/LimestoneLSN",
      "facebook": "https://www.facebook.com/limestoneinc/"
    }
  }
}
